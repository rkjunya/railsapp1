<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/kintore_posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <input name="content" value="<%= @post.content %>">
          <textarea name="detail"><%= @post.detail %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>
